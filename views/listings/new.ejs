<% layout("/layouts/boilerplate.ejs") %>
<body>
    <h2>Create new Listing</h2>
<br>
    <div class="row mt-3">

        <div class="col-8 offset-2">

        
    <form method="post" action="/listings" class=" needs-validation"  novalidate>       <!-- here class and novalidate both are used to validate client form -->
        
        <div class="mb-3">
            <label for="title">Title</label>
            <input type="text" name="listing[title]" placeholder="add your title" class="form-control" required>
            <div class="valid-feedback">Title looks good</div>
        </div>

        <div class="mb-3 ">
            <label for="title">Description</label>
            <input type="text" name="listing[description]" placeholder="enter description" class="form-control"  required>  
            <div class="invalid-feedback">please enter valid description</div>
        </div>
 
        <div class="mb-3">
            <label for="title">Image URL</label>
            <input type="text" name="listing[image]" placeholder="enter image url" class="form-control"  id="">  
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="title">Price</label>
                <input type="text" name="listing[price]" placeholder="1200" class="form-control"  required>  
                <div class="invalid-feedback">Price should be valid </div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="title">Country</label>
                <input type="text" name="listing[country]" placeholder="india" class="form-control"  required>  
                <div class="invalid-feedback">country should be valid</div>
            </div>
                
        </div>
        
        <div class="mb-3">
            <label for="title">Location</label>
            <input type="text" name="listing[location]" placeholder="Mathura" class="form-control"  required>  
            <div class="invalid-feedback">Location should be valid</div>
        </div>
        
        
        <button class="btn btn-dark add-btn mt-3">Add this listing</button>
        <br><br>
    </form>
</div>
</div>    
</body>
